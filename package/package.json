{
  "name": "three-js-react-component",
  "version": "1.0.0",
  "description": "React component using three.js library to display 3d graphics",
  "author": "Dawid Badurek",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf  dist/ && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --project tsconfig.build.json",
    "build:cjs": "tsc --module CommonJS --outDir dist/cjs --project tsconfig.build.json",
    "test": "jest",
    "watch": "tsc --watch --project tsconfig.build.json",
    "link": "npm link && cd ../app && npm link three-js-react-component"
  },
  "license": "MIT",
  "dependencies": {
    "react-is": "^18.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.7",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@types/react-is": "^17.0.3",
    "@types/three": "^0.144.0",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "three": "^0.144.0"
  }
}